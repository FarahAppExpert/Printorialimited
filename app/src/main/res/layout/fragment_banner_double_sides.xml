<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Banners.BannerDoubleSides">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/bannerdoublesides" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Banner Double Sided"
                            android:textColor="@color/yellow"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:text="@string/banner_double_discription"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@string/banner_double_discription1"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Â£2.40 sq. ft."
                            android:textColor="@color/yellow"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="320dp"
                        android:layout_height="2dp"
                        android:background="@color/yellow"
                        android:layout_marginTop="270dp"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banner Format"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="30dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/banner_format_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

           <HorizontalScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/doubleside1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/doubleside1"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/doubleside2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/doubleside2"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/doubleside3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/doubleside3"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/doubleside4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/doubleside4"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/doubleside5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/doubleside5"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/doubleside6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/doubleside6"
                    android:checked="true" />


            </RadioGroup>
           </HorizontalScrollView>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose your finishing"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="30dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/banner_finishing_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/doubleside7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/doubleside7"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/doubleside8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/doubleside8"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/doubleside9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/doubleside9"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/doubleside10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/doubleside10"
                        android:checked="true" />

                </RadioGroup>
            </HorizontalScrollView>

        </androidx.cardview.widget.CardView>


</LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>





</FrameLayout>